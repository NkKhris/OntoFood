<%- include('./header')%>

<!-- Page content-->
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8">
            <!-- Post content-->
            <article>
                <!-- Post header-->
                <header class="mb-4">
                    <!-- Post title-->
                    <h1 class="fw-bolder mb-1"> <%= label %></h1>
                    <!-- Post meta content-->
                    <div class="text-muted fst-italic mb-2">
                    
                        <% if (isClass) { %>

                            Classe , avec des relations hierarchiques

                         
                        <% }else{ %>

                            Individual , avec des relations de types

                
                          <%}%>
                    
                    </div>
                   
                    <!-- Post categories-->
                   

                    
                    <% infos.records.forEach((elm) => {%>

                        <% if (isClass) { %>
                             
                            <% if (elm.p == 'http://www.w3.org/2000/01/rdf-schema#subClassOf' && (elm.lb2 !== label && elm.lb2 !== 'Thing' )) { %>

                                      <a class="badge bg-secondary text-decoration-none link-light"  href="/global_details/<%=elm.lb2%>"><%= elm.lb2 %> </a>
    
                                <%}%>
                         
                        
                         <% }else { %>
                            
                              
                            <%if (elm.p == "http://www.w3.org/1999/02/22-rdf-syntax-ns#type" && (elm.lb1 == label && elm.lb2 != 'Thing' )) {%>

                                      <a class="badge bg-secondary text-decoration-none link-light"  href="/global_details/<%=elm.lb2%>"><%= elm.lb2 %> </a>

                                <%}%>
                        
                    
                          <%}%>
                          
                         <% })%>

                   
                </header>
                <!-- Preview image figure-->
                <figure class="mb-4"><img class="img-fluid rounded" src="https://dummyimage.com/900x400/ced4da/6c757d.jpg" alt="..." /></figure>
                <!-- Post content-->
                <section class="mb-5">

                    <% comments.records.forEach(function(comment){%>

                          <p class="fs-5 mb-4 lead"><b> <%= comment.comment %> </b> </p>

                   <% })%>

                </section>
            </article>
            <!-- Comments section-->
            <section class="mb-5">
                <div class="card bg-light">
                    <div class="card-body">
                        <!-- Comment form-->
                        <form class="mb-4"><textarea class="form-control" rows="3" placeholder="Entrez  un fait par rapport à cette entité"></textarea></form>
                        <!-- Comment with nested comments-->
                        <div class="d-flex mb-4">
                            <!-- Parent comment-->
                            <div class="flex-shrink-0"><img class="rounded-circle" src="https://dummyimage.com/50x50/ced4da/6c757d.jpg" alt="..." /></div>
                            <div class="ms-3">


                                
                            </div>
                        </div>
                      
                    </div>
                </div>
            </section>
        </div>
        <!-- Side widgets-->
        <div class="col-lg-4">
            
                <% if (isClass) { %>
                
                <!-- Individual Section-->
                <div class="card mb-8">
                    <div class="card-header">Individuals</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">

                                <%- include('individuals');%>

                            </div>
            
                        </div>
                    </div>
                </div>
                
            
        <% } %>
            


            <!-- Compostion Section-->
            <div class="card mb-8">
                <div class="card-header">Composition</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-8">


                        </div>

                    </div>
                </div>
            </div>



            <!-- Section Recette-->
            <div class="card mb-8">
                <div class="card-header">Recette</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-8">
                        
                            <%-include('composition');%>

                        </div>

                    </div>
                </div>
            </div>




            <!-- Section Recette -->
            <div class="card mb-8">
                <div class="card-header">Origine</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-8">


                        </div>

                    </div>
                </div>
            </div>


            <!-- Categories widget-->
            <div class="card mb-8">
                <div class="card-header">Nutritive Apport</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-8">
                            <%- include('apport_nutritif');%>
                        </div>

                    </div>
                </div>
            </div>


            <% if (isClass) { %>

                  
            <!-- Side widget-->
            <div class="card mb-4">
                <div class="card-header">Related Class</div>

                <div class="card-body">
                    <div class="row">

                        <div class="col-sm-12">

                            <%- include('related');%>


                        </div>
        
                    </div>
                </div>

            </div>


            <% } %>







        </div>
    </div>
</div>


<%- include('./footer')%>
