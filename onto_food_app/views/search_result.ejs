<!DOCTYPE html>
<html>
    <img id="searchbarimage" src="" />
<head>
    <title>OntoFood Search</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/stylesheets/style.css" rel="stylesheet" />


</head>

<body>
    <form id="header" style="margin-top: 0px; margin-bottom: 25px;" method="post" action="/text_search">
        <div id="topbar" style="padding: 15px;">
            <p><h2 style="size: 100px;padding-left: 10px;">OntoFood</h2></p>
            <div id="searchbar" type="text" style="margin-left: 25px;">
                <input  id="searchbartext" type="text" value="<%= search_word %>" name="search_word"/>
                <button id="searchbarmic">
                    <p class="user"><i class="fa fa-search"></i></p>
                </button>
            </div>
        </div>
        <div id="optionsbar">
        </div>
    </form>

    <!-- Zone de resultat -->
    <div id="searchresultsarea" style="margin-left: 220px;">

        <p id="searchresultsnumber">About <%= results.length %> results (0.56 seconds) </p>


    <% results.forEach(result => { %>

        <%result.records.forEach(record => { %>

            <div class="searchresult">
                <a href="/global_details/<%=record.label%>"><h2 style="font-size: 19px; margin-bottom: 5px;"> <%= record.label.charAt(0).toUpperCase() + record.label.slice(1) %> </h2> </a>
                <a class="text-success">https://ontofood.com</a> <button>â–¼</button>
                <p style="font-size: 15px; margin-top: 3px;"> <%= record.comment %> </p>
            </div>

        <%})%>

        <%})%>

    </div>



</body>

</html>
